pragma solidity 0.6.0;


contract TokenFarm {
    
    
    event Approval(address indexed tokenOwner, address indexed spender,
    uint tokens);
    event Transfer(address indexed from, address indexed to,
    uint tokens);
    using SafeMath for uint256;
    string public name = "Decentralife Token Farm";
    address[] public stakers;
    address private dai;
    address private decentralife;
    address private owner;
    mapping(address => uint256) public stakingBalance;
    mapping(address => bool) public hasStaked;
    mapping(address => bool) public isStaking;
    uint256 public amountOfStakers; 


    constructor(address _daiToken, address _decentralife) public {
        dai = _daiToken;
        decentralife = _decentralife;
        owner = msg.sender;
  
    }
  IERC20 daiToken = IERC20(dai);
    IERC20 decentralifeToken = IERC20(decentralife);
    //addresses is the map of addresses
    //ret is the returned value
    //amountOfStakers made as uint256
    //new address 
    

function stakeTokens(uint256 _amount) public {
        // Require amount greater than 0
        
        require(_amount > 0, "amount cannot be 0");
       // require (daiToken.balanceOf(msg.sender) > 0, "error, not enough dai");
        
        
        // Trasnfer Mock Dai tokens to this contract for staking
        //IN DEV

        daiToken._transfer(msg.sender, address(this), _amount);
        emit Transfer(owner, msg.sender, _amount);
        // Update staking balance
        stakingBalance[msg.sender] = stakingBalance[msg.sender] + _amount;

        // Add user to stakers array *only* if they haven't staked already
        if(!hasStaked[msg.sender]) {
            stakers.push(msg.sender);
        }
       amountOfStakers = amountOfStakers.add(1);
        // Update staking status
        isStaking[msg.sender] = true;
        hasStaked[msg.sender] = true;

    }
    
    function getBalanceDai() public view returns (uint256){

    return daiToken.balanceOf(msg.sender);

    }
    

    // Unstaking Tokens (Withdraw)
    function unstakeTokens() public {
        // Fetch staking balance
        uint256 balance = stakingBalance[msg.sender];

        // Require amount greater than 0
        require(balance > 0, "staking balance cannot be 0");

        // Trasnfer Mock Dai tokens to this contract for staking
        daiToken.transfer(msg.sender, balance);
        emit Transfer(owner, msg.sender, balance);
        // Reset staking balance
        stakingBalance[msg.sender] = 0;

        // Update staking status
        isStaking[msg.sender] = false;
        
    }

    // Issuing Tokens
    function issueTokens() public {
        // Only owner can call this function
        uint256 fees = 0;
        // Issue tokens to all stakers
        for (uint256 i=0; i<stakers.length; i++) {
            address recipient = stakers[i];
            uint256 bankCommission = stakingBalance[recipient].div(2);
            
            uint256 balance = stakingBalance[recipient].sub(bankCommission);
            if(balance > 0) {
                decentralifeToken.transfer(recipient, balance);
                fees = fees.add(bankCommission);
            }
        }
       decentralifeToken.transfer(owner, fees);
    }
}
